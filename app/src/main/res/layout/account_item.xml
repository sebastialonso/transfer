<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/account_cardview">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_account_type"
                android:text="Cuenta Vista"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_account_bank"
                android:text="Banco Santander"
                android:textSize="12sp"
                android:layout_alignBaseline="@+id/card_account_type"
                android:layout_alignBottom="@+id/card_account_type"
                android:layout_toEndOf="@+id/card_account_type"
                android:layout_marginStart="11dp"
                android:textColor="#b1b2b2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_account_number"
                android:layout_below="@id/card_account_type"
                android:text="50091689507"
                android:textSize="34sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_account_owner_name"
                android:layout_below="@id/card_account_number"
                android:text="Sebastian Gonzalez"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_account_owner_rut"
                android:text="17.754.041-2"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/card_account_number"
                android:layout_toEndOf="@+id/card_account_owner_name" />

            <CheckBox
                android:id="@+id/card_account_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>